<Window x:Class="Kenshi_DnD.CombatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kenshi_DnD"
        mc:Ignorable="d"
        Title="CombatWindow" Height="750" Width="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Label 
            Grid.Column="0" Grid.Row="0"
            Content="Combate:"></Label>
        <Label
            Grid.Column="1" Grid.Row="0"
            x:Name="TimerUI"
            ></Label>
        <Label 
            Grid.Column="0" Grid.Row="1"
            x:Name="HeroTest" Content="Héroes"></Label>
        <Label 
            Grid.Column="2" Grid.Row="1"
            x:Name="MonsterTest" Content="Enemigos" HorizontalAlignment="Right"></Label>
        <Grid
            Grid.Column="0" Grid.Row="2" Grid.RowSpan="2"
            x:Name="AllHeroes">

        </Grid>
        <Grid
            Grid.Column="2" Grid.Row="2" Grid.RowSpan="2"
            x:Name="AllMonsters">

        </Grid>
        <Label
            Grid.Column="1" Grid.Row="3"
            x:Name="CombatTest"
            Content="-   -"
            ></Label>
        <Button
            Grid.Column="1" Grid.Row="4"
            Click="NextTurn"
            Content="Avanzar jugada"
            >
        </Button>
        <ScrollViewer Grid.Row="5" Grid.Column="1" Margin="20,5,20,5" VerticalScrollBarVisibility="Auto">
            <TextBlock x:Name="InfoLog" TextWrapping="Wrap">
            </TextBlock>
        </ScrollViewer>
        <TreeView Grid.Column="0" Grid.Row="6" x:Name="HeroItems">
        </TreeView>
        <TreeView Grid.Column="2" Grid.Row="6" x:Name="UnselectedItems">
        </TreeView>
    </Grid>
</Window>
