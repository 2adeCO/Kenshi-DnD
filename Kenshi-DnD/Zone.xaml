<UserControl x:Class="Kenshi_DnD.Zone"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kenshi_DnD"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        
        
        <Border Grid.Column="1" BorderBrush="Black"  BorderThickness="2">
            <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Visible">
                <TextBox x:Name="InfoLog">
                </TextBox>
            </ScrollViewer>
            
        </Border>
        <StackPanel x:Name="ActionsPanel" Grid.Column="0">
            <StackPanel.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1, 0.9">
                    <GradientStop Color="#D2B48C" Offset="0" />
                    <GradientStop Color="#8B5A2B" Offset="0.7"/>
                    <GradientStop Color="#5C4033" Offset="1.0"/>
                </LinearGradientBrush>
            </StackPanel.Background>
        
        </StackPanel>
        <Button Content="Irse" FontSize="20" 
                Click="GoToMap"
                HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Grid.Column="0" Margin="4,10,4,10">
            
        </Button>

        <Grid Grid.Column="2">
            <!-- Bar -->
            <Grid x:Name="BarGrid" Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid x:Name="BarActions" Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Button x:Name="HireButton"  Content="Contratar" Click="HireHero" 
                            Grid.Row="0" HorizontalAlignment="Stretch" Margin="4,10,4,10"></Button>
                    <Button Content="Pasar la noche por 100 cats" Grid.Row="1"
                             HorizontalAlignment="Stretch" Margin="4,10,4,10"
                        ></Button>
                    <Button Content="Irse del bar" Grid.Row="2"
                             HorizontalAlignment="Stretch" Margin="4,10,4,10"
                            Click="CloseCurrentGrid"
                            />

                </Grid>

                <Grid x:Name="BarItems" Grid.Column="1">

                </Grid>
            </Grid>

            <!-- Hospital -->
            <Grid x:Name="HospitalGrid" Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid x:Name="HospitalActions" Grid.Row="0">
                    
                </Grid>

                <Grid x:Name="HospitalItems" Grid.Row="1">
                    
                </Grid>
            </Grid>

            <!-- Tienda -->
            <Grid x:Name="ShopGrid" Visibility="Collapsed">
                
            </Grid>

            <!-- Contrabando -->
            <Grid x:Name="ContrabandMarketGrid" Visibility="Collapsed">
                
            </Grid>

            <!-- Armas a distancia -->
            <Grid x:Name="RangedShopGrid" Visibility="Collapsed">
                
            </Grid>
        </Grid>
    </Grid>

</UserControl>
